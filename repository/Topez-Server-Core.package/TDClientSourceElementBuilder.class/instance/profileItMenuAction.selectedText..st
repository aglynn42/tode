profileItMenuAction: listElement selectedText: selectedString
  "100 timesRepeat: [| ar | 
     ar := {}.
     1 to: 10000 do: [:i | 
       ar add: i printString -> i ] ]"

  | tpz pfTool |
  tpz := listElement topez.
  pfTool := tpz toolInstanceFor: 'pf'.
  pfTool
    perform: #'pfmonitor:'
      with: [ self evaluateString: selectedString topez: listElement topez ];
    perform: #'pfview'.
  ^ true